[user]
  name = Jae-Heon Ji
  email = {{ .email | quote }} 

[init]
  defaultBranch = main

[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only

[include]
  path = ~/.config/delta/themes/catppuccin.gitconfig

[delta]
  navigate = true
  side-by-side = true
  features = catppuccin-mocha

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default
